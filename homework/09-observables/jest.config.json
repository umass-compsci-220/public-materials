{
  "collectCoverageFrom": ["<rootDir>/src/!(main).ts"],
  "coverageReporters": ["json-summary", "text"],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 100,
      "statements": 80
    }
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "preset": "ts-jest/presets/default-esm",
  "testPathIgnorePatterns": ["<rootDir>/out/", "<rootDir>/node_modules/"],
  "transform": {
    "^.+\\.[tj]sx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  }
}
